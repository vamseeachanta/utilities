            "type": "bashdb",
            "request": "launch",
            "name": "Bash simple",
            "cwd": "${workspaceFolder}",
            // "cwd": "k:/github/assetutilities",
            "program": "${file}",
            "terminalKind": "integrated"   <---- This attaches the integrated terminal.
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (type in script name)",
            "cwd": "${workspaceFolder}",
            "program": "${command:AskForScriptName}",
            "args": []
        },
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash-Debug (select script from list of sh files)",
            "cwd": "${workspaceFolder}",
            "program": "${command:SelectScriptName}",
            "args": []
        },
        {
            "type": "bashdb",
            "request": "launch",
